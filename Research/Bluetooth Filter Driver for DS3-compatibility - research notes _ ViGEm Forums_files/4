					<meta itemprop="datePublished" content="2019-02-24T13:12:25.189Z">
					<meta itemprop="dateModified" content="2019-02-24T13:16:36.517Z">

					<div class="row post-header">
	<div class="col-xs-12">
		<div class="post-time pull-left">
			<a class="permalink" href="/post/1128"><span class="timeago" title="2019-02-24T13:12:25.189Z"></span></a>
		</div>
		<div class="post-editor pull-left">
			<i component="post/edit-indicator" class="fa fa-pencil-square pointer edit-icon "></i>
			<small data-editor="nefarius" component="post/editor" class="hidden">last edited by nefarius <span class="timeago" title="2019-02-24T13:16:36.517Z"></span></small>
		</div>
		
